<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.12.xsd">
    
    <changeSet id="1" author="Kellis">
    	<preConditions onFail="MARK_RAN" onFailMessage="Tabela artista jÃ¡ existe.">
    		<not>
				<tableExists tableName="artista"/>
    		</not>
    	</preConditions>
    	
    	<createTable tableName="artista">
    		<column name="id" type="INT">
    			<constraints nullable="false"
    			primaryKey="true"
    			primaryKeyName="pk_artista"/>
    		</column>
    		<column name="nome" type="VARCHAR(255)">
    			<constraints nullable="false"
    			unique="true"/>
    		</column>
    	</createTable>
    </changeSet>
    
</databaseChangeLog>